<h1>Listing users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
       
       <td>
        <%= link_to 'show',
                      user_path(user), :class => 'btn btn-default btn-success' %>
       </td>
       
      </tr>
    <% end %>
  </tbody>
</table>

