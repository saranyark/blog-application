<%= form_for([@post, @post.comments.build]) do |f| %> 
  
  <div class="form-group">
    
    <%= f.label :comment, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">    
      <%= f.text_area :body, :class => 'form-control', required: true  %>
    </div>
    </div>
    
  <p>
    <%= f.submit 'submit' %>
  </p>
<% end %>